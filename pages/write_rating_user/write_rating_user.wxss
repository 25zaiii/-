/* pages/write_rating/write_rating.wxss */
page {
  height: 100%;
  background-color: rgb(243, 245, 253);
}

icon {
  vertical-align: middle;
}
.page__hd {
  padding: 0rpx 0rpx 10rpx 0rpx;
  font-size: 80rpx;
  color: rgba(49, 163, 216, 0.884);
}

.section-1 {
  border-bottom: 8rpx outset rgba(143, 134, 134, 0.548);
  width: 100%;
}

.section-2 {
  width: 100%;
  height: 100%;
}

.page-body {
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.jz {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.topic {
  display: flex;
  flex-direction: column;
  border:solid #ececec 3rpx;
  background-color: white;
  box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.397);
  border-radius: 10rpx;
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  font-size: 40rpx;
}
.topic_t {
  display: flex;
  flex-direction: column;
  border:solid #ececec 3rpx;
  background-color: white;
  box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.397);
  border-radius: 10rpx;
  width: 80%;
  height: 70rpx;
  margin-bottom: 20rpx;
  font-size: 40rpx;
}

.topic_title {
  display: flex;
  flex-direction: column;
  background-color: white;
  box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.397);
  border-radius: 10rpx;
  width: 90%;
  height: 60rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}
.topic_select {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx;
  width: 200px;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.com-sTxt {
  padding:10rpx 10rpx 10rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}

.weui{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.weui-uploader{
  width: 94%;
  margin-left: 3%;
  padding: 0px 0px 9px;
}
.weui-uploader__file {
  float: left;
  margin-right: 9px;
   margin-top: 9px;
}
.weui-uploader__img {
  display: block;
  width: 79px;
  height: 79px;
}
.weui-uploader__file_status {
  position: relative;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-top: 9px;
  width: 77px;
  height: 77px;
  border: 1px solid #d9d9d9;
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input-box:active {
  border-color: #999;
}
.weui-uploader__input-box:active:before, .weui-uploader__input-box:active:after {
  background-color: #999;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}