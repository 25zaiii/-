page{
  background-color: #f0f0f0;
}
.container{
  width: 100%;
  height: 100%;
}
/*选项卡*/
.head{
  background-color: #fff;/*#bef1eb*/
  display: flex;
  /* align-items: center; */
  height: 100rpx;
  width: 100%;
  top: 0;
  position: fixed;
  z-index: 999;
}
.head .head_text{
  color: #292421;
  text-align: center;
  font-size: 34rpx;
  /* flex-grow: 1; */
  width: 33.33%;
  padding: 25rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.head .active{
  font-size: 36rpx;
  color: #292421;
  border-bottom: #292421 5rpx solid ;
  /* border-bottom-left-radius: 4rpx;
  border-bottom-right-radius: 4rpx; */
}
/*内容栏*/
.body{
  display: flex;
  width: 100%;
  height: 90%;
  margin-top: 100rpx;
  flex-direction: column;
}
.body .body_navbar{
  background-color: #f0f0f0;
  display: flex;
  flex-wrap: nowrap;
  white-space: nowrap;
  /*flex-direction: column;
  flex-wrap: nowrap;
  white-space: nowrap;*/
  width: 120%;
  padding: 10rpx 0;
  text-align: center;
  align-items: center;
  /* border: #dedede 1px solid ; */
}
.body_navbar .body_navbar_text{
  color: #444444;
  width: 200rpx;
  padding: 15rpx 20rpx;
  margin: 10rpx;
  background-color: #fff; 
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  /*border-bottom: #dedede 1px solid ;*/
  font-size: 28rpx;
  border-radius: 20rpx;
  box-shadow: 1px 1px 5rpx #aaaaaa;
}
.body_navbar .active{
  background-color: #292421;
  color: #fff;
}
.body .body_order{
  background-color: #f0f0f0;
  width: 100%;
  height: 100%;
  display: flex;
  margin-bottom: 5rpx;
  /* margin-top: 80rpx; */
  /* margin-left: 20%; */
}
.body_order .order{
  height: 400rpx;
  padding: 30rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  width: 95%;
  margin-left: 2.5%;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}
.body_order .order1{
  height: 200rpx;
  padding: 30rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  width: 95%;
  margin-left: 2.5%;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}
.body_order .hover_order{
  opacity: 0.9;
  background-color: #f7f7f7;
}
.order .text_area{
  width: 90%;
  height: 100%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
}
.order1 .text_area{
  width: 90%;
  height: 100%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
}
.text_area .area_head{
  height: 80rpx;
  width: 100%;
  display: flex;
}
.area_head .avatar{
  margin-left: 10rpx;
  display: flex;
  align-items: center;
}
.avatar .img{
  width: 60rpx;
  height: 60rpx;
  overflow:hidden;
  border-radius: 50%;
  border: 1px solid #fff;
}
.area_head .nickname{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.nickname .nickname_text{
  font-size: 24rpx;
  color: #292421;
}
.nickname .time{
  font-size: 24rpx;
  color: #292421;
}
.text_area .area_body{
  height: 75%;
  width: 100%;
}
.area_body .content{
  height: 25%;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}
.content .content_text{
  font-size: 26rpx;
  word-wrap: break-word;
  word-break: break-all;
  display: flex;
  align-items: center;
}
.text_area .area_body1{
  height: 75%;
  width: 100%;
}
.area_body1 .content1{
  /* height: 25%; */
  height: 90%;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}
.content1 .content_text1{
  font-size: 26rpx;
  word-wrap: break-word;
  word-break: break-all;
  display: flex;
  align-items: center;
}
.area_body .body_img{
  height: 75%;
  width: 100%;
  /* padding: 0 10rpx; */
  display: flex;
  align-items: center;
  /* justify-content: center; */
}
.body_img image{
  /* width: 220rpx; */
  /* height: 220rpx; */
  /* flex-grow: 1; */
  height: 100%;
  width: 48.5%;
  margin: 0 1%;
  border-radius: 10rpx;
}
.area_head .btn_area{
  margin-right: 0;
  margin-left: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.btn_area .reddot{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: red;
  right: 0;
  top: 10rpx;
  position: absolute;
  z-index: 100;
  box-shadow: 1px 1px 10rpx rgba(0, 0, 0, 0.2);
}
.btn_area .btn{
  z-index: 99;
  margin-right: 5rpx;
  margin-left: auto;
  position: relative;
  display: flex;
  text-align: center;
  padding-bottom: 5rpx;
  border-bottom: #0fb6a5 1rpx solid;
}
.btn_area .hover_btn{
  top: 3rpx;
  left: 3rpx;
  position: relative;
}
.btn .btn_txt{
  margin: auto;
  font-size: 24rpx;
  color: #0fb6a5; 
}
.btn_area .order_status{
  margin-right: 5rpx;
  margin-left: auto;
  font-size: 24rpx;
  color: #0fb6a5;
  text-align: center;
  display: flex;
  align-items: center;
}
.body_order .noOrder{
  width: 100%;
  margin-top: 20%;
  text-align: center;
  color: #292421;
}

