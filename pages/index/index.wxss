/**index.wxss**/
page{
  background-color: #fff;
}
.container{
  width: 100%;
  height: 100%;
  /* position: relative; */
}
.container .index_swiper {
  /* width: 95%;
  margin-left: 2.5%; */
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  /* border-radius: 20rpx; */
  box-shadow:  2px 2px 20rpx #777777;
  /* position: relative; */
  z-index: 0;
}
.index_swiper swiper-item{
  /* border-radius: 20rpx; */
  z-index: 0;
}
.index_swiper image{
  width: 100%;
  height: 100%;
  /* border-radius: 20rpx; */
  z-index: 0;
}
.container .index_icon{
  height: 100%;
  width: 95%;
  margin-left: 2.5%;
  z-index: 2;
  position: relative;
  /* margin-top: 50%; */
  margin-top: 350rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  display: flex;
  box-shadow:  2px 2px 10rpx #aaaaaa;
  border-radius: 20rpx;
  background-color: #fff;/*#0fb6a5*/
}
.index_icon .icon{
  margin: 12rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.icon .images{
  text-align: center;
}
.icon image{
  margin: auto;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #fff;
  box-shadow: 0px 0px 10rpx #fff;
}
.icon .text{
  font-size: 26rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 5rpx;
  color: #292421;
}
.container .tips{
  display: flex;
  width: 95%;
  height: 100%;
  margin-left: 2.5%;
  margin: 20rpx auto;
  flex-direction: column;
  background-color: #fff;
  box-shadow:  2px 2px 10rpx #aaaaaa;
  border-radius: 20rpx;
  /* position: relative; */
}
.tips .tipbar{
  padding: 15rpx;
  height: 10%;
  display: flex;
  align-items: center;
  box-shadow:  1px 1px 10rpx #aaaaaa;
  border-radius: 20rpx;
  background-color: #292421;
  /* position: relative; */
}
.tipbar .tipbar_text{
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.tips .tipbody{
  height: 90%;
  display: flex;
  position: relative;
}
.tipbody .tip_pic{
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 0;
  margin-left: 0;
  z-index: 0;
}
.tip_pic .image{
  opacity: 0.25;
  width: 400rpx;
  height: 200rpx;
  margin: 10rpx 0;
  margin-right: 20rpx;
  margin-left: auto;
}
.tipbody .tip_all{
  opacity: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  position: absolute;
  z-index: 2;
  overflow: hidden;
}
.tip_all .tip_left{
  height: 100%;
  width: 33.33%;
  margin: 20rpx 0;
  /* flex-grow: 1; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-right: #dedede 0.5rpx solid;
}
.tip_left .tipdealing_text{
  color: black;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 2px 1px 2rpx #aaaaaa;
}
.tip_left .tipdealing_text_num{
  color: #0fb6a5;
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.tip_all .tip_center{
  height: 100%;
  width: 33.33%;
  margin: 20rpx 0;
  /* flex-grow: 1; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-right: #dedede 0.5rpx solid;
}
.tip_center .tipsearch_text{
  color: black;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 2px 1px 2rpx #aaaaaa;
}
.tip_center .tipsearch_text_num{
  color: #0fb6a5;
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.tip_all .tip_right{
  height: 100%;
  width: 33.33%;
  margin: 20rpx 0;
  /* flex-grow: 1; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.tip_right .tipfinish_text{
  color: black;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 2px 1px 2rpx #aaaaaa;
}
.tip_right .tipfinish_text_num{
  color: #0fb6a5;
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.container .rank{
  display: flex;
  width: 95%;
  margin-left: 2.5%;
  margin: 20rpx auto;
  flex-direction: column;
  
  border-radius: 20rpx;
  box-shadow:  2px 2px 10rpx #aaaaaa;
  background-color: #fff;
  position: relative;
}
.rank .rank_title{
  padding: 0 15rpx;
  height: 10%;
  display: flex;
  align-items: center;
  box-shadow:  1px 1px 10rpx #aaaaaa;
  border-radius: 20rpx;
  background-color: #292421;
}
.rank_title .rank_title_text{
  padding: 15rpx 0;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.rank_title .image{
  margin-right: 0;
  margin-left: auto;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.image .rank_title_image{
  height: 30rpx;
  width: 35rpx;
  margin-right: 0;
  margin-left: auto;
}
.rank .rank_body{
  display: flex;
  flex-direction: column;
}
.rank_body .item{
  height: 140rpx;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  align-items: center;
}
.rank_body .hover_class{
  opacity: 0.9;
  background-color: #f7f7f7;
}
.item .image{
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image .img{
  width: 110rpx;
  height: 110rpx;
  margin-left: 30rpx;
  overflow:hidden;
  border-radius: 50%;
  border: 1px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.image .img1{
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  border-radius: 50%;
}
.item .info{
  flex-grow: 3;
}
.info .info_nickname{
  margin: 20rpx;
  font-size: 34rpx;
}
.info .info_recode{
  display: flex;
  margin: 20rpx;
}
.info_recode .info_recode_text{
  font-size: 26rpx;
  color: #b8bacc;
}
.rank_body .nobody{
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #292421;
  font-size: 34rpx;
}
