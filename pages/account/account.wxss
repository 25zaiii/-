page{
  background-color: #f0f0f0;
}
.container{
  width: 100%;
  height: 100%;
}
.body{ 
  /* margin-top: 20rpx; */
  background-color: #fff
}
.body .group{
  width: 90%;
  margin-left: 5%;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #dedede;
}
.group .name{
  color: black;
  font-size: 34rpx;
}
.group .txt{
  color: #b8bacc;
  margin-left: 250rpx;
  /* margin-left: auto;
  margin-right: 0; */
  font-weight: 300;
  font-size: 34rpx;
}
.body .group_bottom{
  width: 90%;
  margin-left: 5%;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  align-items: center;
}
.group_bottom .name_bottom{
  color: black;
  font-size: 34rpx;
}
.group_bottom .txt_bottom{
  color: #b8bacc;
  margin-left: auto;
  margin-right: 0;
  font-weight: 300;
  font-size: 34rpx;
}
.group_bottom .txt_bottom_tel{
  color: #b8bacc;
  margin-left: 250rpx;
  font-size: 34rpx;
  font-weight: 300;
}
.group_bottom .img{
  height: 30rpx;
  width: 18rpx;
  margin-right: 0rpx;
  margin-left: auto;
}
.group_bottom .btn{
  /* height: 40rpx; */
  width: 100rpx;
  margin-right: 0rpx;
  margin-left: auto;
  font-size: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 4rpx #b8bacc;
  color: #292421;
}
.button{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button .btn1{
  background-color: #292421;
  color: #fff;
  font-size: 32rpx;
  width: 50%;
}
.button .btn2{
  background-color: grey;
  color: #fff;
  font-size: 32rpx;
  width: 50%;
}